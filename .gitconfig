[commit]
	verbose = true
	gpgsign = true
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
  patch = !git --no-pager diff --no-color
[push]
	default = current
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
